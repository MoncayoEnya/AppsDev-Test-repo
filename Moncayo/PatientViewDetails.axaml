<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        x:Class="PatientDashboard.MainWindow"
        Title="Patient Dashboard"
        Width="1200" Height="800"
        Background="#F5F9FC">

  <DockPanel LastChildFill="True">

    <Grid Margin="40,20,30,10" DockPanel.Dock="Top">
      <Grid.ColumnDefinitions>
        <ColumnDefinition Width="*" /> 
        <ColumnDefinition Width="Auto" /> 
      </Grid.ColumnDefinitions>

      <TextBlock Text="Patient Dashboard"
                 FontSize="28"
                 FontWeight="Bold"
                 Foreground="#3e8dc0"
                 VerticalAlignment="Center"
                 Grid.Column="0" />

      <Button Content="Add Patient"
              Width="140" Height="40"
              Background="#4169e1" Foreground="White"
              FontSize="14" FontWeight="SemiBold"
              BorderThickness="0" CornerRadius="8"
              HorizontalContentAlignment="Center" VerticalContentAlignment="Center"
              HorizontalAlignment="Right" VerticalAlignment="Center"
              Grid.Column="1" />
    </Grid>

    <!-- Main Content -->
    <Grid Margin="30,0,30,30">
      <Grid.ColumnDefinitions>
        <ColumnDefinition Width="2.5*" />
        <ColumnDefinition Width="3.5*" />
      </Grid.ColumnDefinitions>

      <!-- Patient List Panel -->
      <Border Background="White" BorderBrush="#DCE4EC" BorderThickness="1" CornerRadius="12" Padding="20" Margin="0,0,20,0">
        <StackPanel Spacing="20">

          <TextBlock Text="Patient List" FontSize="20" FontWeight="Bold" Foreground="Black" HorizontalAlignment="Center" />

          <!-- Search Box -->
          <Border Background="#EFF3F7" CornerRadius="12" Padding="8" BorderBrush="#DCE4EC" BorderThickness="1">
            <DockPanel VerticalAlignment="Center">
              <TextBlock Text="Search List....." FontSize="16" Margin="5,0" VerticalAlignment="Center" />
              <TextBox Watermark="Search patient..." 
                       Background="Transparent" 
                       BorderThickness="0" 
                       FontSize="14"
                       VerticalContentAlignment="Center"
                       Margin="5,0" />
            </DockPanel>
          </Border>

          <!-- Patient Cards -->
          <StackPanel Spacing="12">
            <Border Background="#EFF3F7" CornerRadius="8" Padding="12">
              <StackPanel>
                <TextBlock Text="Juan Dela Cruz" FontWeight="Bold" FontSize="14" />
                <TextBlock Text="Hypertension" FontSize="12" Foreground="#4A4A4A" />
              </StackPanel>
            </Border>

            <Border Background="#EFF3F7" CornerRadius="8" Padding="12">
              <StackPanel>
                <TextBlock Text="Maria Santos" FontWeight="Bold" FontSize="14" />
                <TextBlock Text="Diabetes" FontSize="12" Foreground="#4A4A4A" />
              </StackPanel>
            </Border>

            <Border Background="#EFF3F7" CornerRadius="8" Padding="12">
              <StackPanel>
                <TextBlock Text="Pedro Reyes" FontWeight="Bold" FontSize="14" />
                <TextBlock Text="Asthma" FontSize="12" Foreground="#4A4A4A" />
              </StackPanel>
            </Border>
          </StackPanel>

        </StackPanel>
      </Border>

      <!-- Details Panel -->
      <Border Grid.Column="1" Background="White" BorderBrush="#DCE4EC" BorderThickness="1" CornerRadius="12" Padding="20">
        <Grid>
          <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
          </Grid.RowDefinitions>

          <!-- Personal Info-->
          <StackPanel Grid.Row="0" Margin="0,0,0,20">
            <TextBlock Text="Personal Info" FontSize="18" FontWeight="SemiBold" Foreground="Black" Margin="0,0,0,10" />
            <Border Background="#F8FAFC" BorderBrush="#DCE4EC" BorderThickness="1" CornerRadius="8" Padding="12">
              <StackPanel Orientation="Horizontal" Spacing="20">
                <Ellipse Width="80" Height="80" Fill="#CED9E0" />
                <StackPanel>
                  <TextBlock Text="Name: Juan Dela Cruz" FontSize="14" />
                  <TextBlock Text="Age: 22" FontSize="14" />
                  <TextBlock Text="Address: Lahug, Cebu City" FontSize="14" />
                </StackPanel>
                <TextBlock Text="Contact: 0912 123 5564" FontSize="14" VerticalAlignment="Top" />
              </StackPanel>
            </Border>
          </StackPanel>

          <!-- Medical Info-->
          <StackPanel Grid.Row="1" Margin="0,0,0,20">
            <TextBlock Text="Medical Info" FontSize="18" FontWeight="SemiBold" Foreground="Black" Margin="0,0,0,10" />
            <Border Background="#F8FAFC" BorderBrush="#DCE4EC" BorderThickness="1" CornerRadius="8" Padding="10">
              <StackPanel Spacing="5">
                <TextBlock Text="Condition: Hypertension" FontSize="14" Foreground="#2c3e50" />
                <TextBlock Text="Blood Pressure: 150/95 mmHg" FontSize="14" Foreground="#2c3e50" />
                <TextBlock Text="Medication: Amlodipine 5mg" FontSize="14" Foreground="#2c3e50" />
                <TextBlock Text="Doctor's Notes: Patient advised to maintain low-sodium diet and regular exercise." FontSize="14" Foreground="#2c3e50" TextWrapping="Wrap" />
              </StackPanel>
            </Border>
          </StackPanel>

          <!-- Buttons -->
          <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right" Spacing="10">
            <Button Content="Save Changes"
                    Width="140" Height="40"
                    Background="#28A745" Foreground="White"
                    FontSize="14" FontWeight="SemiBold"
                    BorderThickness="0" CornerRadius="8"
                    HorizontalContentAlignment="Center" VerticalContentAlignment="Center" />

            <Button Content="Delete Patient"
                    Width="140" Height="40"
                    Background="#860111" Foreground="White"
                    FontSize="14" FontWeight="SemiBold"
                    BorderThickness="0" CornerRadius="8"
                    HorizontalContentAlignment="Center" VerticalContentAlignment="Center" />
          </StackPanel>

        </Grid>
      </Border>

    </Grid>

  </DockPanel>

</Window>
